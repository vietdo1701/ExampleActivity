    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_dm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="DM"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tf_dm"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textSize="14sp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_lc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="LC"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />



                <EditText
                    android:id="@+id/tf_lc1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textSize="14sp" />


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_comc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="COMC"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tf_comc"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textColorHint="#616161"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_lc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="LC"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tf_lc2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textColorHint="#616161"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_szw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="SZW"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tf_szw"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textColorHint="#616161"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_szl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="SZL"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tf_szl"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textColorHint="#616161"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2125"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_pc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="PC"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tf_pc"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edittext"
                    android:textColorHint="#616161"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#f3f3f3">

        <Button
            android:id="@+id/btn_Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="0.3"
            android:text="Back"
            android:textColor="@color/black"
            android:background="#aaaaaa"/>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/btn_Confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="0.3"
            android:text="Confirm"
            android:textColor="@color/black"
            android:background="#62ebf2"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>